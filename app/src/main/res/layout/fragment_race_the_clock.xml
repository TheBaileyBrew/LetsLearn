<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/stopwatch_display"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="56sp"
        android:text="RACE"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_display"
        android:layout_below="@id/stopwatch_display"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/submit_answer_button_race"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_below="@id/recycler_view_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="22sp"
        android:textColor="@color/colorPrimary"
        android:text="SUBMIT ANSWER"/>

    <Button
        android:id="@+id/start_new_race"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_below="@id/recycler_view_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="22sp"
        android:textColor="@color/colorPrimary"
        android:visibility="gone"
        android:text="PLAY AGAIN"/>

    <TextView
        android:id="@+id/correct_header"
        android:layout_below="@id/recycler_view_display"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CORRECT ANSWERS"/>
    <TextView
        android:id="@+id/correct_total"
        android:layout_below="@id/correct_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:text="0"/>

</RelativeLayout>