<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewmulti"
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp">
        <RelativeLayout
            android:id="@+id/card_border_changable"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_background_color">
            <TextView
                android:id="@+id/first_digit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="4dp"
                android:textSize="32sp"
                android:text="5"/>
            <TextView
                android:id="@+id/math_function"
                android:layout_toRightOf="@id/first_digit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textColor="@color/colorPrimary"
                android:textSize="32dp"
                android:text="+"/>
            <TextView
                android:id="@+id/second_digit"
                android:layout_toRightOf="@id/math_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="32dp"
                android:text="9"/>
            <TextView
                android:id="@+id/math_solution"
                android:layout_toRightOf="@id/second_digit"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textColor="@color/colorPrimary"
                android:textSize="32dp"
                android:text="="/>
            <RadioGroup
                android:id="@+id/radio_group_multi"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/math_solution"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radio_button_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:text="1"/>
                <RadioButton
                    android:id="@+id/radio_button_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:text="2"/>
                <RadioButton
                    android:id="@+id/radio_button_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:text="3"/>
                <RadioButton
                    android:id="@+id/radio_button_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:text="4"/>
            </RadioGroup>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>